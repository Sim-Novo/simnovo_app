const express = require('express');
const path = require('path');
const app = express();
const port = 3000;

// Serve static files from public folder
app.use(express.static('public'));

// Home page
app.get('/', (req, res) => {
  res.sendFile(path.join(__dirname, 'views', 'index.html'));
});

// About page
app.get('/about', (req, res) => {
  res.send('<h1>About SimNovo Prototype</h1><p>This is a demo About page.</p><a href="/">Go Back Home</a>');
});

// Start server
app.listen(port, () => {
  console.log(`SimNovo app running at http://127.0.0.1:${port}/`);
});